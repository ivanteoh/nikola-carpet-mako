{
  "name": "nikola-carpet-mako",
  "version": "0.1.0",
  "description": "Nikola theme based from Bulma.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-clean && npm run build-sass && npm run build-autoprefix",
    "build-autoprefix": "postcss --use autoprefixer --output assets/css/style.css assets/css/style.css",
    "build-clean": "rm -rf assets/css/*",
    "build-sass": "node-sass --output-style expanded --source-map true --include-path lib/bulma src/scss/style.scss assets/css/style.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivanteoh/nikola-carpet-mako.git"
  },
  "author": {
    "name": "Ivan Teoh",
    "url": "https://github.com/ivanteoh/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ivanteoh/nikola-carpet-mako/issues"
  },
  "homepage": "https://github.com/ivanteoh/nikola-carpet-mako#readme",
  "devDependencies": {
    "autoprefixer": "^6.7.3",
    "browserify": "^14.1.0",
    "node-sass": "^4.5.0",
    "postcss-cli": "^3.0.0-beta"
  }
}
