## -*- coding: utf-8 -*-

<%def name="bar(crumbs)">
%if crumbs:
  <nav class="level breadcrumbs">
    <div class="breadcrumb level-left">
      %for link, text in crumbs:
        %if text != index_file:
          %if loop.first:
            <div class="level-item home">
          %else:
            <div class="level-item separator">
          %endif
          %if link == '#':
            ${text.rsplit('.html', 1)[0]}
          %else:
            <a href="${link}">${text}</a>
          %endif
          </div>
        %endif
      %endfor
    </div>
  </nav>
%endif
</%def>
